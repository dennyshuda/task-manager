{
	"extends": "next/core-web-vitals",

	"rules": {
		"no-unused-vars": "warn",
		"react/self-closing-comp": [
			"error",
			{
				"component": true,
				"html": true
			}
		],
		"import/order": [
			"error",
			{
				"newlines-between": "always",
				"groups": [
					"external",
					"type",
					"index",
					"builtin",
					"sibling",
					"parent",
					"internal",
					"object"
				],
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				}
			}
		]
	}
}
